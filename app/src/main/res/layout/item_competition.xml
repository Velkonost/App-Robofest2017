<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:background="@drawable/background_webviewstyle">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewCompetition"
            card:cardElevation="2dp"
            card:cardUseCompatPadding="true"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/comp_img"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_comp"
                        android:layout_below="@id/comp_img"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_alignParentStart="true" />
                <Button
                    android:layout_below="@id/title_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_showmore"
                    android:text="Подробнее"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/showmore_web">
        </WebView>
    </LinearLayout>

</LinearLayout>